@{
	ViewData["Title"] = "BTC/EUR";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

@section Scripts {
	<script>
		$('#chartZone').load("/Market/Chart")
		setInterval(function () { $('#chartZone').load("/Market/Chart") }, 60000);
	</script>
}

<div class="text-center">

	<h1 class="display-4">Bitcoin / Euro</h1>

	<div id="chartZone"></div>

	<a class="text-danger" asp-controller="Market" asp-action="Index">Back</a>

</div>
