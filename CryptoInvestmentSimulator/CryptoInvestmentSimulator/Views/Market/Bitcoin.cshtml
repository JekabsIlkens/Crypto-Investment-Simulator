@{
	ViewData["Title"] = "BTC/EUR";
}

@section Scripts 
{
	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
	<script>
		$('#chartZone').load("/Market/ChartBTC")
		setInterval(function () { $('#chartZone').load("/Market/ChartBTC") }, 60000);
	</script>
}

<div class="text-center">

	<h1 class="display-4">Bitcoin / Euro</h1>

	<div id="chartZone"></div>

	<a class="text-danger" asp-controller="Market" asp-action="Index">Back</a>

</div>
