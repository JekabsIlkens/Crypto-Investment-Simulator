@model CryptoInvestmentSimulator.Models.UserModel
@{
    ViewData["Title"] = "Portfolio Page";
}

<div class="text-center">
    <h1 class="display-4">Your Portfolio Page</h1>
    <p>To be continued...</p>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="row">

            <div class="col-md-3">
                <img src="@Model.AvatarUrl" alt="" class="img-rounded img-responsive" />
            </div>

            <div class="col-md-4">
                <h3>Your account details</h3>
                <p> <strong>First name:</strong> @Model.FirstName </p>
                <p> <strong>Last name:</strong> @Model.LastName </p>
                <p> <strong>Email address:</strong> @Model.EmailAddress </p>
            </div>

        </div>
    </div>
</div>