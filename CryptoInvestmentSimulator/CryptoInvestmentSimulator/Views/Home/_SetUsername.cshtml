<!-- Username creation popup for new users -->

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form method="post" asp-controller="Home" asp-action="SetUsername">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">What should we call you?</h5>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" required="required" name="username" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button id="saveUsername" type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>