@{
    ViewData["Title"] = "Home Page";
}

<!-- Username creation popup for new users -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form method="post" asp-controller="Home" asp-action="SetUsername">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">What should we call you?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" required="required" name="username" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <h1 class="display-4">The Home Page</h1>
    <p>To be continued...</p>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">Set username</button>
</div>
